{
  "name": "minista-project",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "minista",
    "build": "minista build",
    "preview": "minista preview",
    "lint:js": "eslint src --ext .js,.jsx",
    "lint:js:fix": "eslint src --ext .js,.jsx --fix",
    "lint:css": "stylelint \"**/*.{css,scss,pcss}\"",
    "lint:css:fix": "stylelint \"**/*.{css,scss,pcss}\" --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "run-s lint:js lint:css format",
    "lint:fix": "run-s lint:js:fix lint:css:fix format:fix"
  },
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "minista": "^3.1.12",
    "prettier": "^3.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "saas": "^1.0.0",
    "sass": "^1.97.1",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1"
  }
}
